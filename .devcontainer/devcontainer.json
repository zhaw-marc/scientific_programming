{
	"name": "Python 3.11 with Jupyter and PDF Preview",
	"dockerComposeFile": "docker-compose.yml",
	"service": "app",
	"workspaceFolder": "/workspace",
	"forwardPorts": [5050, 5432],
	"portsAttributes": {
		"5050": {
			"label": "pgAdmin",
			"onAutoForward": "openBrowserOnce"
		},
		"5432": {
			"label": "PostgreSQL"
		}
	},

	"customizations": {
		"vscode": {
			"extensions": [
				"ms-python.python",
				"ms-toolsai.jupyter",
				"ms-azuretools.vscode-docker",
				"ms-python.autopep8",
				"ms-python.pylint",
				"analytic-signal.preview-pdf",
				"grapecity.gc-excelviewer",
				"github.copilot",
				"github.copilot-chat",
				"mechatroner.rainbow-csv",
				"tal7aouy.icons"
			],
			"settings": {
				"workbench.colorTheme": "Default Dark+",
				"editor.rulers": [80],
				"workbench.iconTheme": "vs-seti"
			}
		}
	},

	"postCreateCommand": "chmod +x .devcontainer/setup.sh && bash .devcontainer/setup.sh && pip install -r requirements.txt && sudo apt-get update && sudo apt-get install -y tesseract-ocr && sudo apt-get install -y tesseract-ocr-deu"
}
